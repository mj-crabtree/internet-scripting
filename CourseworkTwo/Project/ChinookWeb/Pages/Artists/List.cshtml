@page
@using Microsoft.AspNetCore.Server.Kestrel.Core
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model ChinookWeb.Pages.Artists.List
<div>
    <h1 class="display-4">Artists</h1>
</div>
<a href="/Artists/Create" class="btn btn-primary mb-3">Add New Artist</a>
<table class="table">
    <thead>
    <td>ID</td>
    <td>Artist Name</td>
    <td>Album Count</td>
    <td></td>
    </thead>
    @foreach (var artist in Model.Artists)
    {
        <tr>
            <td>@artist.ArtistId</td>
            <td>@artist.Name</td>
            <td>@artist.Albums.Count</td>
            <td><a asp-page="details" asp-route-ArtistId="@artist.ArtistId" class="btn btn-outline-info">Details</a></td>
        </tr>
    }
</table>
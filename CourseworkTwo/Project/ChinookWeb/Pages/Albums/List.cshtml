@page
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model AlbumsListViewModel
@{
    ViewData["Title"] = "Albums";
}

<div class="d-flex justify-content-between">
    <div class="d-flex align-items-center">
        <h1 class="display-4">Albums</h1>
    </div>
    <div class="d-flex align-items-center">
        <a href="/Albums/Create" class="btn btn-primary float-right">Add New Album</a>
    </div>
</div>
<table class="table my-4">
    <thead>
    <tr>
        <th scope="col" class="text">ID</th>
        <th scope="col" class="text">Name</th>
        <th scope="col" class="text">Artist</th>
        <th scope="col" class="text-center">Details</th>
        <th scope="col" class="text-center">Delete</th>
    </tr>
    </thead>
    @foreach (var album in Model.Albums)
    {
        <tr>
            <td>@album.AlbumId</td>
            <td>@album.Title</td>
            <td>@album.Artist.Name</td>
            <td class="text-center">
                <button class="btn btn-outline">
                    <a href="details/@album.AlbumId">
                        <i class="bi bi-search"></i>
                    </a>
                </button>
            </td>
            <td class="text-center">
                <button type="button" class="btn btn-outline text-danger" data-toggle="modal" data-target="#deleteAlbumModal-@album.AlbumId">
                    <i class="bi bi-trash"></i>
                </button>
            </td>
            <div class="modal fade" id="deleteAlbumModal-@album.AlbumId" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Deletion Confirmation</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete the album <b>@album.Title</b> by <b>@album.Artist.Name</b>?</p>
                        </div>
                        <form asp-page-handler="DeleteAlbum" method="post">
                            <input type="hidden" value="@album.AlbumId" name="albumId">
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                <input type="hidden" value="@album.AlbumId" name="albumId">
                                <button class="btn btn-danger" type="submit" asp-page-handler="DeleteAlbum">Delete Album</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </tr>
    }
</table>

@* alternate first, previous, next, last *@
<div>
    <ul class="pagination">
        <li class="page-item @(!Model.ShowFirst? "disabled":"")">
            <a asp-page="/albums/list" asp-route-CurrentPage="1" class="page-link"><i class="bi bi-skip-backward"></i></a>
        </li>

        <li class="page-item @(!Model.ShowPrevious? "disabled":"")">
            <a asp-page="/albums/list" asp-route-CurrentPage="@(Model.CurrentPage -1)" class="page-link"><i class="bi bi-arrow-left"></i></a>
        </li>
        <li class="page-item  @(!Model.ShowNext? "disabled":"")">
            <a asp-page="/albums/list" asp-route-CurrentPage="@(Model.CurrentPage + 1)" class="page-link"><i class="bi bi-arrow-right"></i></a>
        </li>

        <li class="page-item  @(!Model.ShowLast? "disabled":"")">
            <a asp-page="/albums/list" asp-route-CurrentPage="@Model.TotalPages" class="page-link"><i class="bi bi-skip-forward"></i></a>
        </li>
    </ul>
</div>